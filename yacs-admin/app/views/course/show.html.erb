<h1><%=@department.code%> <%=@course.number%>: <%=@course.name%></h1>
<p><strong>Description:</strong> <%=@course.description%></p>

<p><%= link_to ('<span class="glyphicon glyphicon-chevron-left table-icon" aria-hidden="true"></span>
 Back to '+@department.name+' department').html_safe, @department %></p>

<p><%= link_to ('<span class="glyphicon glyphicon-chevron-left table-icon" aria-hidden="true"></span>
 Back to all courses').html_safe, course_index_path %></p>

<h2>Sections:</h2>
<h4><%= link_to ('<span class="glyphicon glyphicon-plus h4-icon" aria-hidden="true"></span>
 Add section').html_safe, @course %></h4>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>CRN</th>
      <th>Seats</th>
      <th>Seats Taken</th>
      <th>Instructors</th>
      <th># of Periods</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.id %></td>
        <td><%= section.name %></td>
        <td><%= section.crn %></td>
        <td><%= section.seats %></td>
        <td><%= section.seats_taken %></td>
        <td><% if section.instructors.length==0%>
    None
  <%elsif section.instructors.length==1%>
    <%=section.instructors[0]%>
  <%else%>
    <%section.instructors.slice(0,section.instructors.length-1).each do |instructor|%>
      <%=instructor%>,
    <%end%>
    <%=section.instructors[section.instructors.length-1]%>

  <%end%></td>
        <td><%= section.num_periods %></td>
        <td><%= link_to ('<span class="glyphicon glyphicon-share table-icon" aria-hidden="true"></span>
 Show').html_safe, section %></td>
        <td><%= link_to ('<span class="glyphicon glyphicon-pencil table-icon" aria-hidden="true"></span>
 Edit').html_safe, @course %></td>
        <td><%= link_to ('<span class="glyphicon glyphicon-trash table-icon" aria-hidden="true"></span>
 Destroy').html_safe, @course %></td>
      </tr>
    <% end %>
  </tbody>
</table>

