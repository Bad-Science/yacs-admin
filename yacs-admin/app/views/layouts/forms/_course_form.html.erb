<%=form_for @course, url: course_index_path do |c|%>
  
  <div class="form-group">
  <%= c.label :name %>
  <%= c.text_field :name, :class => "form-control"%>
</div>
  <div class="form-group">
  <%= c.label :number %>
  <%= c.text_field :number, :class => "form-control" %>
</div>
  <div class="form-group">
  <%= c.label :min_credits %>

  <%= c.select :min_credits,options_for_select([0,1,2,3,4]),{},class: "form-control"%>
    
</div>
  <div class="form-group">
    <%= c.label :max_credits %>

  <%= c.select :max_credits,options_for_select([0,1,2,3,4]),{},class: "form-control"%>
</div>
  <div class="form-group">
    <%= c.label :description %>

  <%= c.text_area :description , :class => "form-control"%>
</div>

  <div class="form-group">
<strong>Select department:</strong>
  <%=c.collection_select :department_id, Department.all, :id, :code, {} , :class => "form-control"%>
</div>
  <%= submit_tag "Submit", :class => "btn btn-search" %>

<%end%>