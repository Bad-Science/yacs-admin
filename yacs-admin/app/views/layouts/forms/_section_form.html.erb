<%=form_for @section, url: section_index_path do |c|%>
  
  <div class="form-group">
  <%= c.label :name %>
  <%= c.text_field :name, :class => "form-control"%>
</div>
  <div class="form-group">
  <%= c.label :crn %>
  <%= c.text_field :crn, :class => "form-control" %>
</div>
  <div class="form-group">
  <%= c.label :seats %>
  <%= c.text_field :seats, :class => "form-control" %>
</div>
  <div class="form-group">
  <%= c.label :seats_taken %>
  <%= c.text_field :seats_taken, :class => "form-control" %>
</div>
  <div class="form-group">
    <%= c.label :instructors %>
  <%= c.text_field :instructors, :class => "form-control" %>
</div>
  <div class="form-group">
<strong>Select course:</strong>
  <%=c.collection_select :course_id, Course.all, :id, :name, {} , :class => "form-control"%>
</div>
  <%= submit_tag "Submit", :class => "btn btn-search" %>

<%end%>