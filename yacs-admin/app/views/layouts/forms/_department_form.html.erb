<%=form_for @department, url: department_index_path do |c|%>
  <div class="form-group">
  <%= c.label :code %>
  <%= c.text_field :code, :class => "form-control" %>
</div>  
  <div class="form-group">
  <%= c.label :name %>
  <%= c.text_field :name, :class => "form-control"%>
</div>

  <div class="form-group">
<strong>Select school:</strong>
  <%=c.collection_select :school_id, School.all, :id, :name, {} , :class => "form-control"%>
</div>
  <%= submit_tag "Submit", :class => "btn btn-search" %>

<%end%>