<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>CRN</th>
      <th>Seats</th>
      <th>Seats Taken</th>
      <th>Instructors</th>
      <th># of Periods</th>
      <%if show_course_id%><th>Course ID</th><%end%>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% sections.each do |section| %>
      <tr>
        <td><%= section.id %></td>
        <td><%= section.name %></td>
        <td><%= section.crn %></td>
        <td><%= section.seats %></td>
        <td><%= section.seats_taken %></td>
        <td><%=render partial: "layouts/instructors", locals: {instructors: section.instructors}%></td>
        <td><%= section.num_periods %></td>
        <%if show_course_id%><td><%= section.course_id %></td><%end%>
        <td><%= link_to ('<span class="glyphicon glyphicon-share table-icon" aria-hidden="true"></span>
 Show').html_safe, section %></td>
        <td><%= link_to ('<span class="glyphicon glyphicon-pencil table-icon" aria-hidden="true"></span>
 Edit').html_safe, section_index_path %></td>
        <td><%= link_to ('<span class="glyphicon glyphicon-trash table-icon" aria-hidden="true"></span>
 Destroy').html_safe, section_index_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>